
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h1>Lista de Posts</h1>
        <p>@Html.ActionLink("Novo Post", "Novo")</p>
        <table>
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Resumo</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Blog.Models.Post p in ViewBag.Posts)
                {
                    <tr>
                        <td>@p.Titulo</td>
                        <td>@p.Resumo</td>
                        <td>@Html.ActionLink(p.Categoria, "Categoria", new { categoria = p.Categoria })</td>
                        <td>@Html.ActionLink("Remover", "Remover", new { id = p.Id })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
